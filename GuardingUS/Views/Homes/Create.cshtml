@model GuardingUS.Models.ViewModels.AddHomeVM

@{
    ViewData["Title"] = "Create Home";
}

<h1>Create a Home</h1>

<form asp-action="Create">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="Number" class="form-label"></label>
            <input asp-for="Number" class="form-control" />
            <span asp-validation-for="Number" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="IdAddress" class="form-label"></label>
            <select asp-for="IdAddress" asp-items="Model.Address" class="form-select"></select>
            <span asp-validation-for="IdAddress" class="text-danger"></span>
        </div>

        <button class="btn btn-primary">Create Address</button>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}