@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager


<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <span class="nav-link-danger text-dark">Hola, @User.Identity.Name</span>
        </li>
        <li>
            <form class="form-inline" asp-action="Logout" asp-controller="Users">
                <button type="submit" class="nav-link btn btn-link text-dark">
                    Logout
                </button>
            </form>
        </li>
    }
    else
    {
            <li class="nav-item">
                <a class="nav-link dark-text" asp-controller="Users" asp-action="Register">Register</a>
            </li>
            <li class="nav-item">
                <a class="nav-link dark-text" asp-controller="Users" asp-action="Login">Login</a>
            </li>
    }
 </ul>